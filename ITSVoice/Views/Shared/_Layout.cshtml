<!doctype html>
<html lang="en">
<head>
    <title>ITS Voice</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="/Content/assets/vendor/bootstrap/css/boot.css">
    <link rel="stylesheet" href="/Content/assets/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/assets/vendor/linearicons/style.css">
    <link rel="stylesheet" href="/Content/assets/vendor/metisMenu/metisMenu.css">
    <link rel="stylesheet" href="/Content/assets/vendor/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css">
    <link rel="stylesheet" href="/Content/assets/vendor/chartist/css/chartist.min.css">
    <link rel="stylesheet" href="/Content/assets/vendor/chartist-plugin-tooltip/chartist-plugin-tooltip.css">
    <link rel="stylesheet" href="/Content/assets/vendor/toastr/toastr.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/Content/assets/css/main.css">
    <link rel="stylesheet" href="/Content/dataTable/datatable.css">
    <link rel="stylesheet" href="/Content/dataTable/responsive.css">
    <link rel="stylesheet" href="~/Content/custom.css" />
    <!-- GOOGLE FONTS -->
    <link href="~/Content/font/google-fonts.css" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="/Media/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/Media/favicon.png">
    @RenderSection("styles", false)
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        @Html.Partial("_navbar")
        <!-- END NAVBAR -->
        <!-- LEFT SIDEBAR -->
        @Html.Partial("_sidebar")
        <!-- END LEFT SIDEBAR -->
        <!-- MAIN CONTENT -->
        @RenderBody()
        <!-- END MAIN CONTENT -->
        <div class="clearfix"></div>
        @Html.Partial("_footer")
    </div>
    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="/Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="/Content/assets/vendor/bootstrap/js/popper.js"></script>
    <script src="/Content/assets/vendor/bootstrap/js/boot.js"></script>
    <script src="/Scripts/dataTable/datatable.js"></script>
    <script src="/Scripts/dataTable/responsive.js"></script>
    <script src="/Content/assets/vendor/metisMenu/metisMenu.js"></script>
    <script src="/Scripts/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/Scripts/vendor/jquery-sparkline/js/jquery.sparkline.min.js"></script>
    <script src="/Content/assets/vendor/bootstrap-progressbar/js/bootstrap-progressbar.min.js"></script>
    <script src="/Content/assets/vendor/chartist/js/chartist.min.js"></script>
    <script src="/Content/assets/vendor/chartist-plugin-tooltip/chartist-plugin-tooltip.min.js"></script>
    <script src="/Content/assets/vendor/chartist-plugin-axistitle/chartist-plugin-axistitle.min.js"></script>
    <script src="/Content/assets/vendor/chartist-plugin-legend-latest/chartist-plugin-legend.js"></script>
    <script src="/Content/assets/vendor/toastr/toastr.js"></script>
    @*<script src="/Content/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>*@
    <script src="/scripts/sweet-alert.js"></script>
    <script src="/scripts/common.js"></script>
    <script src="/scripts/CommonMethods.js"></script>
    @RenderSection("scripts", false)
    <script>
        if (location.href.includes("/Campaign/CampaignCDR")) ExpandCampaigns()
        else if (location.href.includes("/Campaign/Create")) ExpandCampaigns();

        function ExpandCampaigns() {
            document.getElementById("campaignHead").setAttribute("aria-expanded", "true");
            document.getElementById("campaign").setAttribute("aria-expanded", "true");
            document.getElementById("campaign").className = "collapse in";
        }
    </script>
</body>
</html>
